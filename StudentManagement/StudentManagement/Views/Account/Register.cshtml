@model StudentManagement.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4>用户注册</h4>
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">        
        <div class="col-md-10">
            @Html.EditorFor(model => model.IsTeacher)
            @Html.LabelFor(model => model.IsTeacher, new { @class = "control-label col-md-2" })
            @Html.ValidationMessageFor(model => model.IsTeacher)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="注册" class="btn btn-default" />
        </div>
    </div>
</div>
}