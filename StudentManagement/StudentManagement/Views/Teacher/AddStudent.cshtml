@model StudentManagement.ViewModels.AddStudentViewModel

@{
    ViewBag.Title = "添加学生";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<input type="hidden" value="@ViewBag.TeacherId" />
<div class="text-left">
    @using (Html.BeginForm("AddStudent", "Teacher", new { id = ViewBag.TeacherId }))
    {

        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Number, new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Number)
            @Html.ValidationMessageFor(model => model.Number)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)

        </div>
        <div class="form-group">
            &nbsp;&nbsp;
            <input type="submit" value="保存" class="btn btn-default" />
        </div>
    }
</div>