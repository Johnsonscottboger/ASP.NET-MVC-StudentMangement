@model IEnumerable<StudentManagement.ViewModels.StudentViewModel>

@{
    Layout = null;
    ViewBag.Title = "Print";
}
<style type="text/css">
    table{
        width:600px;
        margin-top:0px;
        margin-right:auto;
        margin-bottom:0px;
        margin-left:auto;
        text-align:center;
        background-color:burlywood;
        font-size:9pt;
    }
    td{
        padding:5px;
        background-color:#FFFFFF;
    }
    th{
        padding:5px;
    }
    tr:hover td{
        background-color:#ff9900;
    }
</style>
<script type="text/javascript">
    window.print();
</script>
<div class="divBody">
    <table class="table table-hover" border="0" cellpadding="0" cellspacing="1">
        <caption>成绩单</caption>
        <thead>
            <tr>
                <th><p class="text-center">@Html.DisplayNameFor(model => model.Number)</p></th>
                <th><p class="text-center">@Html.DisplayNameFor(model => model.Name)</p></th>
                <th><p class="text-center">@Html.DisplayNameFor(model => model.Exercises)</p></th>
                <th><p class="text-center">@Html.DisplayNameFor(model => model.Tests)</p></th>
                <th><p class="text-center">@Html.DisplayNameFor(model => model.Exam)</p></th>
                <th><p class="text-center">@Html.DisplayNameFor(model => model.Grades)</p></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stu_item in Model)
            {
                <tr>
                    <td>@stu_item.Number</td>
                    <td>@stu_item.Name</td>
                    <td>@stu_item.ExerciseSumScore(ViewBag.Course)</td>
                    <td>@stu_item.TestSumScore(ViewBag.Course)</td>
                    <td>@stu_item.ExamScore(ViewBag.Course)</td>
                    <td>@stu_item.GradeScore(ViewBag.Course)</td>
                </tr>
            }
        </tbody>
    </table>
</div>